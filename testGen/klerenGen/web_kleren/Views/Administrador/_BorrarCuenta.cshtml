
@model web_kleren.Models.AdministradorViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <h3 class="text-center text-danger">Eliminar Cuenta</h3>
        <p class="text-center text-muted">
            Si eliminas tu cuenta, perderás todos tus datos asociados a Kleren. Esta acción no se puede deshacer.
        </p>

        <form id="formBorrarCuenta" asp-action="_BorrarCuenta" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Contraseña Actual -->
            <div class="form-group">
                <label asp-for="Pass" class="control-label">Contraseña Actual</label>
                <input asp-for="Pass" class="form-control" type="password" placeholder="Ingresa tu contraseña actual" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>

            <!-- Botón para enviar el formulario -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-danger">Eliminar Cuenta</button>
            </div>
        </form>
    </div>
</div>
