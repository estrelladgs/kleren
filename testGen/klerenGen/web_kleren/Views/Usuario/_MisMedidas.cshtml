@model web_kleren.Models.MedidasViewModel

<div class="card" id="misDatosCard">
    <div class="card-body">
        <h4 class="card-title">Mis Medidas</h4>

        @if (Model == null || (Model.Pecho == 0 && Model.LargoBrazo == 0 && Model.Cintura == 0 && Model.Caderas == 0 && Model.LargoPierna == 0))
        {
            <p class="text-center text-muted">No tienes medidas registradas.</p>
            <div class="text-center mt-3">
                <button id="btnIntroducirMedidas" data-url="@Url.Action("_IntroducirMedidas", "Usuario")" class="btn btn-primary">Introducir Medidas</button>
            </div>
        }
        else
        {
            <p><strong>Pecho:</strong> @Model.Pecho cm</p>
            <p><strong>Largo de brazo:</strong> @Model.LargoBrazo cm</p>
            <p><strong>Cintura:</strong> @Model.Cintura cm</p>
            <p><strong>Caderas:</strong> @Model.Caderas cm</p>
            <p><strong>Largo de pierna:</strong> @Model.LargoPierna cm</p>
        }
    </div>
    <div class="card-footer text-center">
        @if (Model != null && (Model.Pecho != 0 || Model.LargoBrazo != 0 || Model.Cintura != 0 || Model.Caderas != 0 || Model.LargoPierna != 0))
        {
            <button id="btnModificarMedidas" data-url="@Url.Action("_ModificarMedidas", "Usuario")" class="btn btn-primary">Modificar Medidas</button>
            <button id="btnBorrarMedidas" data-url="@Url.Action("_BorrarMedidas", "Usuario")" class="btn btn-danger">Eliminar Medidas</button>
        }
    </div>
</div>
