@model web_kleren.Models.LoginUsuarioViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card p-4 shadow-lg mx-3" style="width: 100%; max-width: 600px; margin: 20px;">
        <h1 class="text-center">Inicio de sesión</h1>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input asp-for="Pass" type="password" class="form-control" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="text-center my-3">
                <span>¿No tienes cuenta? <a asp-controller="Usuario" asp-action="Registro" class="text-primary">Regístrate</a></span>
            </div>
            <div class="text-center my-3">
                <span>¿Eres administrador? <a href="@Url.Action("Login", "Administrador")">Inicia sesión</a></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary w-100">Enviar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
