@model web_kleren.Models.AdministradorViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="_ModificarContra" method="post">
            <div class="form-group">
                <label>Nueva Contraseña</label>
                <input type="password" name="nuevaContra" class="form-control" />
            </div>
            <div class="form-group">
                <label>Confirmar Contraseña</label>
                <input type="password" name="confirmacionContra" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Actualizar Contraseña</button>
        </form>

    </div>
</div>


