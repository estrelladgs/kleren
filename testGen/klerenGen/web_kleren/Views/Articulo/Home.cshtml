@model IEnumerable<web_kleren.Models.ArticuloViewModel>

@{
    ViewData["Title"] = "Inicio | Kleren";
    UsuarioViewModel usuario = Context.Session.Get<UsuarioViewModel>("usuario");
    string nombre = "";
    bool estaLoggeado = usuario != null;
    if (estaLoggeado)
    {
        nombre = usuario.Nombre;
    }
    if (estaLoggeado)
    {
        Layout = "~/Views/Shared/_LayoutRegistrado.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<!-- Carousel de fotos bienvenida -->
<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleFade" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleFade" data-slide-to="1"></li>
        <li data-target="#carouselExampleFade" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="./1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./2.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./3.png" class="d-block w-100" alt="...">
        </div>
    </div>
</div>

<!-- Barra de busqueda -->
@Html.Partial("_BarraBusqueda")

<!-- Cuerpo de la pagina principal -->
<div class="container">
    <main role="main" class="pb-3">
        <div class="text-center">
            @if (estaLoggeado)
            {
                <h1 class="display-4">¡Hola, @nombre! Seguro que te encantan</h1>
            }
            else
            {
                <h1 class="display-4">¡Hola! Seguro que te encantan</h1>
            }

            <div class="row">
                @foreach (var item in Model)
                {  
                        @Html.Partial("_ArticuloVistaPrevia", item)
                }
            </div>
        </div>
    </main>
</div>



