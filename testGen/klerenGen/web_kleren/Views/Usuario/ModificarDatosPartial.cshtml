@model web_kleren.Models.DatosViewModel

<div class="card" id="misDatosCard">
    <div class="card-body">
        <h4 class="card-title">Modificar Datos</h4>

        <!-- Muestra los errores generales del modelo -->
        <form asp-action="ModificarDatosPartial" method="post" id="formModificarDatos">
            <div id="resultadoModificarDatos" class="mb-3"></div>

            <!-- Muestra los errores generales del modelo -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="Nombre">Nombre:</label>
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" }) <!-- Error específico de Nombre -->
            </div>

            <div class="form-group">
                <label for="Apellidos">Apellidos:</label>
                @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Apellidos, "", new { @class = "text-danger" }) <!-- Error específico de Apellidos -->
            </div>

            <div class="form-group">
                <label for="Correo">Correo:</label>
                @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" }) <!-- Error específico de Correo -->
            </div>

            <div class="form-group">
                <label for="Telefono">Teléfono:</label>
                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" }) <!-- Error específico de Teléfono -->
            </div>

             @*   <div class="form-group">
                <label for="FNac">Fecha de Nacimiento:</label>
                @Html.TextBoxFor(m => m.FNac, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.FNac, "", new { @class = "text-danger" })
            </div>*@

            <!-- Botones -->
            <div class="form-group mb-4">
                <button type="submit" class="btn btn-success">Guardar cambios</button>
                <!-- Botón Cancelar -->
                <button id="btnCancelar" data-url="@Url.Action("MisDatosPartial", "Usuario")" class="btn btn-secondary">Cancelar</button>
            </div>
        </form>
    </div>
</div>
